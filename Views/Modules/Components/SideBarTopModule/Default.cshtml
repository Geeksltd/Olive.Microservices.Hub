@model ViewModel.SideBarTopModule
@(Layout = null)

@{
    var root = Microservice.Me.Url().TrimEnd("/");
    if (root.Contains("hub.")) root = root.Remove("hub.") + "/hub";
}

<!-- «Start| SideBarTopModule» -->
<form data-module="SideBarTopModule" method="post" action="@Url.Current()">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <div class="logo-wrapper">
      <div>
            <a name="Logo" class="logo" href="~/" default-button="true"><img src="@root/img/logo.png" alt="Logo" /></a>
      </div>
   </div>
   @(await Component.InvokeAsync
   <GlobalSearch>
      ())
   </form>
<!-- «End| SideBarTopModule» -->

