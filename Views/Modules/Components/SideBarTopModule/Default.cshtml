@model ViewModel.SideBarTopModule
@inject FS.Shared.Website.IsolatedRoutes.Contracts.IIsolatedRouteProvider isolatedRouteProvider
@(Layout = null)
@{
	var themeRoot = await isolatedRouteProvider.GetThemeRootPath(true);
}

<!-- «Start| SideBarTopModule» -->
<form data-module="SideBarTopModule" method="post" action="@Url.Current()">
	@Html.AntiForgeryToken()
	@Html.StartupActionsJson()
	<div class="logo-wrapper">
		<div>
			<a name="Logo" class="logo" href="~/" default-button="true"><img src="@themeRoot/img/logo.png" alt="Logo" class="logo-img-top" /></a>
		</div>
	</div>
	@(await Component.InvokeAsync
		<GlobalSearch>
		())
</form>
<!-- «End| SideBarTopModule» -->
