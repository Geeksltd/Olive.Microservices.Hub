@{
	if (Request.IsAjaxCall())
		Layout = null;
	else
		Layout = ((bool?)ViewData["NoNav"]) == true ? "~/Views/Layouts/Default.NoNav.cshtml" : "~/Views/Layouts/Default.Container.cshtml";
}

<main class="hub-service">
	<input type="hidden" id="page_meta_title" value="@ViewData["Title"]" />
	@RenderBody()

	@Html.RegisterDynamicScriptFiles()
	@RenderSection("scripts", required: false)
	@Html.RegisterStartupActions()

</main>

